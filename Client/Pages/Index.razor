@page "/"
@using BlazorTable
@using CatalogueGQL.Shared.Models



<PageTitle>Major</PageTitle>

<h3> Major Details </h3>

<div>
    <button type="button" class="btn btn-primary btn-sm" @onclick="()=>AddMajor()">
        <span class="oi oi-plus" aria-hidden="true"></span>
        Add Major
    </button>
</div>
 
<div class="row">
    <div class="col-md-10">
         <table class="table table-borderless">
            <thead>
            <tr>
                <th>Code</th>
                <th>Title</th>
                <th>Min Ctedit</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in lstMajor)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Title</td>
                    <td>@item.MinCreditHours</td>
                </tr>
                    <tr>
                        <td colspan="3">
                            @if (item.Courses.Count > 0)
                            {
                                 <table style="font-size:12px;width:80%" class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Title</th>
                                            <th> Credit Hours</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var course in item.Courses)
                                        {
                                            <tr>
                                                <td>@course.Code</td>
                                                <td>@course.Title</td>
                                                <td>@course.CreditHours</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                             }
                       </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


